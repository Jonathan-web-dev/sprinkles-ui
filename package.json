{
  "name": "sprinkles-ui",
  "version": "0.0.1beta84",
  "description": "A portable, customizable set of UI components",
  "main": "./lib/Sprinkles.js",
  "scripts": {
    "lint": "eslint src/** specs/** tests/** src/**/*.jsx specs/**/*.jsx tests/**/*.jsx",
    "start": "node ./node_modules/ui-harness/start --entry=./specs",
    "test": "npm run lint && jest",
    "test:watch": "node_modules/nodemon/bin/nodemon.js -w tests -w ./src -w ./specs -e js,jsx -x npm test",
    "build": "rm -rf ./lib && node_modules/babel-cli/bin/babel.js ./src --ignore *.spec.js --out-dir ./lib",
    "build:watch": "node_modules/nodemon/bin/nodemon.js -w ./src -e js,jsx -x npm run build",
    "bundle": "node_modules/webpack/bin/webpack.js --progress --colors",
    "prepublish": "npm run build",
    "postinstall": "if [ -d .git/hooks/ ]; then npm run -s install:precommithook; fi",
    "install:precommithook": "if [ ! -f .git/hooks/pre-commit ]; then echo 'cd ../sprinkles-ui && npm run git:precommit' > .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit; fi",
    "git:precommit": "npm test"
  },
  "keywords": [],
  "author": "Harrison Harnisch <hharnisch@signal.co>",
  "license": "MIT",
  "dependencies": {
    "color": "^0.11.3",
    "immutable": "^3.8.1",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "reactcss": "^1.0.7"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-jest": "^15.0.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "eslint": "^3.4.0",
    "eslint-config-airbnb": "^11.0.0",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.2.1",
    "eslint-plugin-react": "^6.2.0",
    "fuse.js": "^2.5.0",
    "jest-cli": "^15.1.1",
    "lorem-ipsum": "^1.0.3",
    "nodemon": "^1.10.2",
    "react-addons-test-utils": "^15.3.1",
    "ui-harness": "3.18.1",
    "webpack": "^1.13.2"
  },
  "files": [
    "lib",
    "src"
  ],
  "jest": {
    "testRegex": "(tests/.*|\\.(test))\\.(es6|js|jsx|json)$",
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "es6",
      "jsx"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab01dv2.thebrighttag.com:dev/sprinkles-ui.git"
  },
  "engines": {
    "node": ">=5.5.0"
  }
}
