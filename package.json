{
  "name": "sprinkles-ui",
  "version": "0.0.1beta61",
  "description": "A portable, customizable set of UI components",
  "main": "./lib/Sprinkles.js",
  "scripts": {
    "lint": "eslint src/** specs/** tests/** src/**/*.jsx specs/**/*.jsx tests/**/*.jsx",
    "start": "node ./node_modules/ui-harness/start --entry=./specs",
    "test": "npm run lint && jest",
    "test:watch": "node_modules/nodemon/bin/nodemon.js -w tests -w ./src -w ./specs -e js,jsx -x npm test",
    "build": "rm -rf ./lib && node_modules/babel-cli/bin/babel.js ./src --ignore *.spec.js --out-dir ./lib",
    "build:watch": "node_modules/nodemon/bin/nodemon.js -w ./src -e js,jsx -x npm run build",
    "bundle": "node_modules/webpack/bin/webpack.js --progress --colors",
    "prepublish": "npm run build",
    "postinstall": "if [ -d .git/hooks/ ]; then npm run -s install:precommithook; fi",
    "install:precommithook": "if [ ! -f .git/hooks/pre-commit ]; then echo 'cd ../sprinkles-ui && npm run git:precommit' > .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit; fi",
    "git:precommit": "npm test"
  },
  "keywords": [],
  "author": "Harrison Harnisch <hharnisch@signal.co>",
  "license": "MIT",
  "dependencies": {
    "color": "^0.11.2",
    "immutable": "^3.8.1",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "reactcss": "^1.0.4"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.10.4",
    "babel-eslint": "^6.0.5",
    "babel-jest": "^12.1.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.9.2",
    "eslint-plugin-jsx-a11y": "^1.5.3",
    "eslint-plugin-react": "^5.2.2",
    "jest-cli": "^12.1.1",
    "lorem-ipsum": "^1.0.3",
    "nodemon": "^1.9.2",
    "react-addons-test-utils": "^15.1.0",
    "ui-harness": "3.5.4",
    "webpack": "^1.13.1"
  },
  "files": [
    "lib",
    "src"
  ],
  "jest": {
    "testDirectoryName": "tests",
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "unmockedModulePathPatterns": [
      "react",
      "react-dom",
      "react-addons-test-utils",
      "fbjs",
      "reactcss",
      "color",
      "immutable"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "testFileExtensions": [
      "es6",
      "js",
      "jsx"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "es6",
      "jsx"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab01dv2.thebrighttag.com:dev/sprinkles-ui.git"
  },
  "engines": {
    "node": ">=5.5.0"
  }
}
