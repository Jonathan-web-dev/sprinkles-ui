{
  "name": "sprinkles-ui",
  "version": "0.0.1",
  "description": "A portable, customizable set of UI components",
  "main": "index.js",
  "scripts": {
    "git:precommit": "npm test",
    "install:precommithook": "if [ ! -f .git/hooks/pre-commit ]; then echo 'cd ../sprinkles-ui && npm run git:precommit' > .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit; fi",
    "lint": "eslint src/** specs/** tests/** src/**/*.jsx specs/**/*.jsx tests/**/*.jsx",
    "postinstall": "npm run -s install:precommithook",
    "start": "node ./node_modules/ui-harness/start --entry=./specs",
    "test": "npm run lint && jest"
  },
  "keywords": [],
  "author": "Harrison Harnisch <hharnisch@signal.co>",
  "license": "MIT",
  "dependencies": {
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "reactcss": "^0.4.3",
    "color": "^0.11.1"
  },
  "devDependencies": {
    "babel-core": "^6.5.1",
    "babel-eslint": "^4.1.8",
    "babel-jest": "^9.0.1",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "eslint": "^1.10.3",
    "eslint-plugin-react": "^3.16.1",
    "jest-cli": "^0.9.0",
    "lorem-ipsum": "^1.0.3",
    "react-addons-test-utils": "^0.14.7",
    "ui-harness": "3.5.4"
  },
  "jest": {
    "testRunner": "<rootDir>/node_modules/jest-cli/src/testRunners/jasmine/jasmine2.js",
    "testDirectoryName": "tests",
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "unmockedModulePathPatterns": [
      "react",
      "react-dom",
      "react-addons-test-utils",
      "fbjs",
      "reactcss",
      "color"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "testFileExtensions": [
      "es6",
      "js",
      "jsx"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "es6",
      "jsx"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab01dv2.thebrighttag.com:dev/sprinkles-ui.git"
  },
  "engines": {
    "node": ">=5.5.0"
  }
}
