{
  "name": "sprinkles-ui",
  "version": "0.0.1",
  "description": "A portable, customizable set of UI components",
  "main": "index.js",
  "scripts": {
    "git:precommit": "npm test",
    "install:precommithook": "if [ ! -f .git/hooks/pre-commit ]; then echo 'cd ../sprinkles-ui && npm run git:precommit' > .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit; fi",
    "lint": "eslint src/** specs/** tests/** src/**/*.jsx specs/**/*.jsx tests/**/*.jsx",
    "postinstall": "npm run -s install:precommithook",
    "start": "node ./node_modules/ui-harness/start --entry=./specs",
    "test": "npm run lint && jest",
    "test:watch": "node_modules/nodemon/bin/nodemon.js -w tests -w ./src -w ./specs -e js,jsx -x npm test",
    "build": "node_modules/webpack/bin/webpack.js --progress --colors"
  },
  "keywords": [],
  "author": "Harrison Harnisch <hharnisch@signal.co>",
  "license": "MIT",
  "dependencies": {
    "color": "^0.11.1",
    "immutable": "^3.7.6",
    "react": "^0.14.8",
    "react-dom": "^0.14.8",
    "reactcss": "^0.4.3"
  },
  "devDependencies": {
    "babel-core": "^6.7.6",
    "babel-eslint": "^6.0.2",
    "babel-jest": "^11.0.0",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "eslint": "^2.7.0",
    "eslint-config-airbnb": "^7.0.0",
    "eslint-plugin-jsx-a11y": "^0.6.2",
    "eslint-plugin-react":"^4.3.0",
    "jest-cli": "^11.0.0",
    "lorem-ipsum": "^1.0.3",
    "react-addons-test-utils": "^0.14.8",
    "ui-harness": "3.5.4",
    "webpack": "^1.12.15",
    "nodemon": "^1.9.1"
  },
  "jest": {
    "testDirectoryName": "tests",
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "unmockedModulePathPatterns": [
      "react",
      "react-dom",
      "react-addons-test-utils",
      "fbjs",
      "reactcss",
      "color",
      "immutable"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "testFileExtensions": [
      "es6",
      "js",
      "jsx"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "es6",
      "jsx"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab01dv2.thebrighttag.com:dev/sprinkles-ui.git"
  },
  "engines": {
    "node": ">=5.5.0"
  }
}
